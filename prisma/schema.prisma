generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id        String   @id @default(cuid())
  url       String
  title     String?
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  clicks    Click[]

  @@map("Links")
}

model Click {
  id            String   @id @default(cuid())
  timestamp     DateTime @default(now())
  profileUserId String

  // A chave estrangeira que está causando o problema
  linkId        String

  visitorId     String
  country       String?
  region        String?
  city          String?
  referrer      String?
  userAgent     String?

  link          Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)

  @@map("clicks")
}